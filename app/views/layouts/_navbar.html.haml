%header.sticky.top-0.w-full.bg-gradient-to-r.from-blue-600.to-blue-950
  .container.p-3.mx-auto
    .flex.items-center.justify-between
      = link_to root_path do
        .flex.items-center
          = image_tag "saturn.svg", alt: "saturn-app", class: "w-12"
          %h1.mt-1.ml-2.text-3xl.font-bold.text-white SaturnApp
      - if user_signed_in?
        .w-fit.rounded-full.bg-white.pt-2.pl-4.pr-3{ title: "Log out" }
          = button_to destroy_user_session_path, method: :delete do
            = image_tag "out.svg", alt: "logout", class: "w-8"
