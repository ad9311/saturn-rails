- unless @thought.errors.messages.empty?
  %p.text-xl.font-bold Errors:
  %ul.mb-5
    - @thought.errors.messages.each_pair do |k, v|
      %li.text-rose-600= "#{k.to_s.humanize} #{v.join(',')}"
= form_for [@recovery, @thought] do |f|
  .form-group
    = f.label :message
    = f.text_area :message
  .form-group
    = f.label :mood
    = f.select :mood, options_for_select(map_sort_moods, selected: @thought.mood)
  .form-actions
    = f.submit "Add thought"