%article.p-5.py-5.mx-auto.max-w-lg.rounded-md.border.border-2.border-neutral-300.bg-white
  .mb-5.flex.justify-end
    = link_to "Edit", edit_thought_path(thought), class: "mr-3 px-2 py-1 text-xs text-white rounded bg-blue-400 hover:bg-blue-500"
    = button_to "Delete", thought_path(thought), method: :delete, class: "px-2 py-1 text-xs text-white rounded bg-rose-500 hover:bg-rose-600"
  .px-3.py-2.bg-neutral-100.rounded-md.border.border-neutral-300
    %p.text-neutral-600.font-semibold= thought.message
    %hr.my-3
    .flex.justify-end
      .leading-none
        .text-sm
          %span This made feel
          %strong= thought.mood
        %span.text-sm.text-neutral-500= thought.created_at.strftime('%A, %d %B')
