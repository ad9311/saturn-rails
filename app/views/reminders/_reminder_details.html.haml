%article.p-5.py-5.mx-auto.max-w-lg.rounded-md.border.border-2.border-neutral-300.bg-white
  .mb-5.flex.justify-between
    = link_to edit_reminder_path(reminder) do
      = image_tag "pencil.svg", alt: "back", class: "w-6 mr-3"
    = button_to reminder_path(reminder), method: :delete do
      = image_tag "trash_bin.svg", alt: "delete", class: "w-6"
  .px-3.py-2.bg-neutral-100.rounded-md.border.border-neutral-300
    %p.break-words.text-neutral-600.font-semibold= reminder.message
    %hr.my-3
    .flex.justify-end
      .leading-none
        %span.text-sm.text-neutral-500= reminder.created_at.strftime('%A, %d %B')
