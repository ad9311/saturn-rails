%article.pl-5.py-5.mx-auto.max-w-lg.rounded-md.border.border-2.border-neutral-300.bg-white
  .pr-5
    .flex.justify-between
      = link_to edit_expense_list_path(expense_list) do
        = image_tag "pencil.svg", alt: "edit", class: "w-6 mr-3"
      = button_to expense_list_path(expense_list), method: :delete do
        = image_tag "trash_bin.svg", alt: "delete", class: "w-6"
    .mt-5
      %h3.text-xl.font-bold= expense_list.title
    .my-3.max-w-sm.flex.items-center.justify-between
      %p Top amount:
      %strong.number.text-xl.text-blue-500= number_to_currency(expense_list.top_amount_allowed, precision: 2, delimiter: ',', separator: '.')
    .my-3.max-w-sm.flex.items-center.justify-between
      %p Expenses:
      %strong.number.text-xl.text-rose-500= number_to_currency(expense_list.total_expenses, precision: 2, delimiter: ',', separator: '.')
    - unless expense_list.expenses.blank?
      .p-5.py-5.mx-auto.max-w-lg.rounded-md.border.border-2.border-neutral-300.bg-white
    %hr.my-3
    .max-w-sm.flex.items-center.justify-between
      %p Balance:
      - if expense_list.balance.positive?
        %strong.number.text-xl.text-green-500= number_to_currency(expense_list.balance, precision: 2, delimiter: ',', separator: '.')
      - else 
        %strong.number.text-xl.text-rose-500= number_to_currency(expense_list.balance, precision: 2, delimiter: ',', separator: '.')
  .mr-5.mt-5.flex.justify-end.text-sm.text-neutral-500
    %span Created on:&nbsp;
    %span.font-bold= expense_list.created_at.strftime('%d %B')
