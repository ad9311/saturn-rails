%article.pl-5.py-5.mx-auto.max-w-lg.rounded-md.border.border-2.border-neutral-300.bg-white
  .pr-5
    .flex.justify-between
      = link_to edit_budget_expense_path(budget, expense) do
        = image_tag "pencil.svg", alt: "edit", class: "w-6 mr-3"
      = button_to budget_expense_path(budget, expense), method: :delete do
        = image_tag "trash_bin.svg", alt: "delete", class: "w-6"
    .mt-5.px-3.py-2.bg-neutral-100.rounded-md.border.border-neutral-300.hover:bg-neutral-200
      %p.font-bold= expense.description
    .my-3.max-w-sm.flex.items-center.justify-between
      %p Amount:
      %strong.number.text-xl.text-blue-500= number_to_currency(expense.amount, precision: 2, delimiter: ',', separator: '.')
  .mr-5.mt-5.flex.justify-end.text-sm.text-neutral-500
    %span Created on:&nbsp;
    %span.font-bold= expense.created_at.strftime('%d %B')
