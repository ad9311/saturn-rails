- value = @expense.amount.nil? ? 0 : @expense.amount
- unless @expense.errors.messages.empty?
  %p.text-xl.font-bold Errors:
  %ul.mb-5
    - @expense.errors.messages.each_pair do |k, v|
      %li.text-rose-600= "#{k.to_s.humanize} #{v.join(',')}"
= form_for [@budget, @expense] do |f|
  .form-group
    = f.label :description
    = f.text_field :description
  .form-group
    = f.label :amount
    = f.number_field :amount, min: 0, step: 0.5, value:
  .form-actions
    = f.submit "Submit"
